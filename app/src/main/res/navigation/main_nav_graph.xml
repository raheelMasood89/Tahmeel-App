<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/pendingListFragment">

    <fragment
        android:id="@+id/pendingListFragment"
        android:name="com.example.tahmeel.ui.fragments.PendingListFragment"
        android:label="fragment_pending_list"
        tools:layout="@layout/fragment_pending_list">
        <action
            android:id="@+id/action_pendingListFragment_to_searchListFragment"
            app:destination="@id/searchListFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchListFragment"
        android:name="com.example.tahmeel.ui.fragments.SearchListFragment"
        android:label="SearchListFragment"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchListFragment_self"
            app:destination="@id/searchListFragment" />
    </fragment>
</navigation>